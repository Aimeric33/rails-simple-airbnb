<h1>Tous nos appartements</h1>
<div class="cards container">
<div class="row">
  <% @flats.each do |flat| %>
    <div class="card col-sm-4 m-2" style="width: 18rem;">
      <img src="https://images.unsplash.com/photo-1529408632839-a54952c491e5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="card-img-top" alt="flat">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description.first(150) %></p>
      </div>
      <div class="card-footer">
        <p><i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %> per night<br><i class="fa-sharp fa-solid fa-person"></i> <%= flat.number_of_guest %> persons</p>
        <%= link_to "Plus de dÃ©tails", flat_path(flat), class: 'btn btn-primary' %>
        <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe , edit_flat_path(flat) %>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
  </div>
</div>
